<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:elevation="2dp"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:layout_marginBottom="8dp">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/imageViewProductImage"
        android:layout_width="235dp"
        android:layout_height="105dp"
        android:layout_marginBottom="4dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <!-- Product Name -->
    <TextView
        android:id="@+id/textViewProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Product Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <!-- Product Price -->
    <TextView
        android:id="@+id/textViewProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Price: $123.45"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal" />

    <!-- Product Quantity -->
    <TextView
        android:id="@+id/textViewProductQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Quantity: 1"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal" />

    <!-- Product Color -->
    <TextView
        android:id="@+id/textViewProductColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Color"
        android:drawableEnd="@drawable/cart_circle"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />


    <!-- Product Size -->
    <TextView
        android:id="@+id/textViewProductSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Size: M"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal" />

    <!-- Rating Bar -->
    <RatingBar
        android:id="@+id/ratingBarProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="0"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center_horizontal" />

    <!-- Review Comment -->
    <EditText
        android:id="@+id/editTextReviewComment"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="?attr/editTextBackground"
        android:gravity="top"
        android:hint="Add your comment"
        android:inputType="textMultiLine"
        android:lines="2"
        android:padding="6dp"
        android:layout_gravity="center_horizontal" />

    <!-- Submit Review Button -->
    <Button
        android:id="@+id/btnSubmitReview"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="Submit Review"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>